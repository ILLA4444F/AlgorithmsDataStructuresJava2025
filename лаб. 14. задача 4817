import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        while (sc.hasNextInt()) {
            int n = sc.nextInt();  // довжина
            int m = sc.nextInt();  // ширина

            int perimeter = 2 * (n + m);
            int area = n * m;

            System.out.println(perimeter + " " + area);
        }
    }
}
